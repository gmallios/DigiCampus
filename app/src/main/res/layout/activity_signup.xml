<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:theme="@style/Theme.WhiteActionBar"
    tools:context=".SignupActivity">


    <TextView
        android:id="@+id/signup_toptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/playfair_display_bold"
        android:text="@string/signup_title"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/signup_form_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/roboto"
        android:text="@string/signup_form_name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_toptext" />

    <EditText
        android:id="@+id/signup_form_name_input"
        style="@style/input_text"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/signup_form_surname_input"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_form_name_text"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:id="@+id/signup_form_surname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/roboto"
        android:text="@string/signup_form_surname_text"
        app:layout_constraintStart_toStartOf="@+id/signup_form_surname_input"
        app:layout_constraintTop_toBottomOf="@+id/signup_toptext" />

    <EditText
        android:id="@+id/signup_form_surname_input"
        style="@style/input_text"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/signup_form_name_input"
        app:layout_constraintTop_toBottomOf="@+id/signup_form_surname_text"
        tools:ignore="Autofill,LabelFor" />


    <TextView
        android:id="@+id/signup_form_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="@string/login_email_input"
        app:layout_constraintStart_toStartOf="@+id/signup_form_email_input"
        app:layout_constraintTop_toBottomOf="@+id/signup_form_name_input" />

    <EditText
        android:id="@+id/signup_form_email_input"
        style="@style/input_text"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_form_email_text"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:id="@+id/signup_form_radiogroup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/signup_form_radiogroup_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_form_email_input" />

    <RadioGroup
        android:id="@+id/signup_form_accountype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_form_radiogroup_text">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/professor" />
    </RadioGroup>


    <TextView
        android:id="@+id/signup_form_age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="@string/signup_form_age_text"
        app:layout_constraintStart_toStartOf="@+id/signup_form_radiogroup_text"
        app:layout_constraintTop_toBottomOf="@+id/signup_form_accountype" />

    <EditText
        android:id="@+id/signup_form_age_input"
        style="@style/input_text"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:focusable="false"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_form_age_text"
        tools:ignore="Autofill,LabelFor,TextFields" />


</androidx.constraintlayout.widget.ConstraintLayout>