<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="login_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@drawable/login_btn</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="input_text">
        <item name="android:background">@drawable/login_input</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">@color/form_input_hint</item>
        <item name="android:textColor">@color/form_input_hint</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>